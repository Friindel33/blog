<h1>Contact Us</h1>
<div class="container">
  <%= form_for :contact, url: contacts_path do |f| %>

    <% if @contact && @contact.errors.any? %>
        <div class="error_explanation">
          <ul>
            <% @contact.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :message %><br/>
      <%= f.text_area :message %>
    </p>

    <p>
      <%= f.submit 'Send Message' %>
    </p>
  <% end %>
</div>
